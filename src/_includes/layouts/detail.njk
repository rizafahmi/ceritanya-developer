  <script src="/static/siriwave.js"></script>
  <script src="/static/app.bundled.js"></script>
  <script>
    const siriWave = new SiriWave({
      container: document.getElementById('siri-container'),
      width: 460,
      height: 100,
      autostart: false,
      color: "#1DD8DF",
      autostart: true
    });

    window.setTimeout(function() {
      siriWave.stop()
    }, 500);

    let audio = new Audio();
    audio.src = "{{ audio }}";
    audio.load();
    function play(audio_url) {
      const img = document.querySelector("#player-play-image");
      if (audio && audio.src === audio_url) {
        if (img.src.indexOf("play") > 1) {
          img.src = "../../static/images/pause-cyan.png";
          siriWave.start();
          audio.play();
        } else {
          img.src = "../../static/images/play-cyan.png";
          siriWave.stop();
          audio.pause();
        }
      } else {
        siriWave.stop();
        audio.pause();
        audio.src = audio_url;
        siriWave.start();
        audio.load();
        img.src = "../../static/images/pause-cyan.png";
        img.classList.add('pause-image');
        img.classList.remove('play-image');
        audio.play();
      }
    }
  </script>
