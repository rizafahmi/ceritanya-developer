---
layout: layouts/base.njk
---
<div class="seasons p-6">
  <ul class="flex">
    <li class="pr-6"><a class="font-medium border-b border-gray-500 pb-6" href="#">Season 2</a></li>
    <li class="pr-6"><a href="/season-1" class="text-gray-600">Season 1</a></li>
    <li><a href="/bonus" class="text-gray-600">Bonus</a></li>
  </ul>
</div>
<div class="episode-list border-t">

  {% for episode in collections.season2 | reverse %}
    <div class="flex px-6 py-4 border-b">
      <div class="episode-icon self-center justify-center">
        <button name="play button" onclick="javascript:play('{{ episode.data.audio }}', 'play-{{ loop.index0 }}');"><img alt="play icon" class="play-image w-1/2" src="./static/images/play.png" id="play-{{ loop.index0 }}" /></button>
      </div>
      <div class="episode-info p-2">
        <div class="metadata text-sm text-gray-600 py-2">
          {{ episode.data.date | htmlDateString }} &centerdot; {{ episode.data.duration }} Menit
        </div>
        <a href="{{ episode.url }}">
          <div class="title font-semibold uppercase text-md pb-4">
            {{ episode.data.title }}
          </div>
          <div class="quote text-sm">
            "{{ episode.data.excerpt }}"
          </div>
        </a>
      </div>
    </div>
  {% endfor %}

</div>
<script>
  if ('serviceWorker' in navigator) {
    navigator.serviceWorker.register('/service-worker.js').then(function(registration) {
      // Registration was successful
      console.log('ServiceWorker registration successful with scope: ', registration.scope);
    }).catch(function(err) {
      // registration failed :(
      console.log('ServiceWorker registration failed: ', err);
    });
  }
</script>
<script async>
  let audio = new Audio();
  function play(audio_url, id) {
    const img = document.querySelector(`#${id}`);
    if (audio && audio.src === audio_url) {
      if (img.src.indexOf("play") > 1) {
        img.src = "./static/images/pause.png";
        audio.play();
      } else {
        img.src = "./static/images/play.png";
        audio.pause();
      }
    } else {
      resetAllPlayButtons();
      audio.pause();
      audio.src = audio_url;
      audio.load();
      img.src = "./static/images/pause.png";
      img.classList.add('pause-image');
      img.classList.remove('play-image');
      audio.play();
    }
  }
  function resetAllPlayButtons() {
    const pauseButtons = document.querySelectorAll('.pause-image');
    pauseButtons.forEach(function(button) {
      button.src = './static/images/play.png';
    })
  }
</script>
